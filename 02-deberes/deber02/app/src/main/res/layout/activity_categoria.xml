<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_categoria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categoria">

    <Button
        android:id="@+id/btn_crearCategoria"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="534dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="137dp"
        android:backgroundTint="@color/principal"
        android:fontFamily="sans-serif-black"
        android:text="Crear"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_categorias"
        android:layout_width="352dp"
        android:layout_height="392dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp"
        android:background="#0D7684E8"
        app:layout_constraintBottom_toTopOf="@+id/btn_crearCategoria"
        app:layout_constraintEnd_toEndOf="@+id/btn_crearCategoria"
        app:layout_constraintStart_toStartOf="@+id/btn_crearCategoria"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_autora3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/secundario"
        android:fontFamily="sans-serif-medium"
        android:text="@string/autora"
        android:textAllCaps="false"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />
</androidx.constraintlayout.widget.ConstraintLayout>