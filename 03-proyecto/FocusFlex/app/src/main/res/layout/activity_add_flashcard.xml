<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_addFlashcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flashcard"
    tools:context=".AddFlashcard">

    <!-- Campo para el tema -->

    <!-- Pregunta 1 -->

    <!-- Respuesta 1 -->

    <!-- Contenedor para preguntas adicionales -->

    <EditText
        android:id="@+id/etTopic"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="617dp"
        android:background="@color/white"
        android:hint="Tema"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etQuestion1"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="510dp"
        android:background="@color/white"
        android:hint="Pregunta"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTopic" />

    <!-- Botón para agregar más preguntas -->

    <!-- Botón para guardar la flashcard -->

    <EditText
        android:id="@+id/etAnswer1"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginBottom="467dp"
        android:background="@color/white"
        android:hint="Respuesta"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQuestion1"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/additionalQuestionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="391dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="59dp"
        android:layout_marginTop="531dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="152dp"
        android:background="@color/pomodoroButton"
        android:backgroundTint="@color/pomodoroButton"
        android:text="Agregar"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="254dp"
        android:layout_marginTop="531dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="152dp"
        android:background="@color/pomodoroButton"
        android:backgroundTint="@color/pomodoroButton"
        android:text="Guardar"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>