<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_flashcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flashcard"
    tools:context=".Flashcard">

    <LinearLayout
        android:id="@+id/lyContainerPrincipal"
        android:layout_width="353dp"
        android:layout_height="644dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="38dp">

        <LinearLayout
            android:id="@+id/lyContainerFlashcard"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- Los botones de los temas se añadirán dinámicamente aquí -->
        </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pomodoroButton"
            android:text="Nuevo"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>