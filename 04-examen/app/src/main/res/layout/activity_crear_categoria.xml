<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crearCategoria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCategoria">

    <EditText
        android:id="@+id/input_nombreCategoria"
        android:layout_width="293dp"
        android:layout_height="46dp"
        android:layout_marginTop="204dp"
        android:layout_marginBottom="481dp"
        android:backgroundTint="@color/secundario"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcionCategoria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcionCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_descripcionCategoria"
        android:layout_width="292dp"
        android:layout_height="43dp"
        android:layout_marginTop="296dp"
        android:layout_marginBottom="392dp"
        android:backgroundTint="@color/secundario"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rbg_estaVisibleCategoria"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/rbg_estaVisibleCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombreCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="525dp"
        android:text="Nombre: "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombreCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_descripcionCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="433dp"
        android:text="Descripción: "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcionCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_visibleCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="252dp"
        android:text="Estará visible:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rbg_estaVisibleCategoria"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rbg_estaVisibleCategoria"
        android:layout_width="292dp"
        android:layout_height="37dp"
        android:layout_marginTop="398dp"
        android:layout_marginBottom="296dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardarCategoria"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/btn_guardarCategoria"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/rbtn_siCategoria"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="Si"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbtn_noCategoria"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:text="No"
            android:textSize="16sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_guardarCategoria"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="202dp"
        android:backgroundTint="@color/principal"
        android:fontFamily="sans-serif-black"
        android:text="Guardar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_autora6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/secundario"
        android:fontFamily="sans-serif-medium"
        android:text="@string/autora"
        android:textAllCaps="false"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>