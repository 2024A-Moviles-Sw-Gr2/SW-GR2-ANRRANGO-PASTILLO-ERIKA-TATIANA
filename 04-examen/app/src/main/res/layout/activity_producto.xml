<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_producto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Producto">

    <TextView
        android:id="@+id/tv_autora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/secundario"
        android:fontFamily="sans-serif-medium"
        android:text="@string/autora"
        android:textAllCaps="false"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/btn_crearProducto"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="110dp"
        android:backgroundTint="@color/principal"
        android:fontFamily="sans-serif-black"
        android:text="Crear"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_verEnMapa"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="110dp"
        android:backgroundTint="@color/principal"
        android:fontFamily="sans-serif-black"
        android:text="Mapa"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/lv_productos"
        android:layout_width="352dp"
        android:layout_height="386dp"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="36dp"
        android:background="#0D7684E8"
        app:layout_constraintBottom_toTopOf="@+id/btn_crearProducto"
        app:layout_constraintEnd_toEndOf="@+id/btn_verEnMapa"
        app:layout_constraintStart_toStartOf="@+id/btn_crearProducto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="444dp"
        android:fontFamily="sans-serif-black"
        android:text="AquÃ­ va la categoria"
        android:textColor="@color/principal"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_crearProducto"
        app:layout_constraintEnd_toEndOf="@+id/btn_verEnMapa"
        app:layout_constraintStart_toStartOf="@+id/btn_crearProducto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>